<?xml version="1.0" encoding='UTF-8' ?>
<configuration debug="true">
    <!--<jmxConfiguratior/>-->

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/btce-algo.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/btce-algo.%d{yyy-MM-dd_HH}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>

        <encoder>
            <immediateFlush>true</immediateFlush>
            <pattern>%date %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>10000</queueSize>
        <appender-ref ref="FILE"/>
    </appender>

    <logger name="org.springframework" level="INFO"/>
    <!--<logger name="org.springframework.web" level="ALL"/>-->

    <!--<logger name="com.btcalgo.service.api.ApiService" level="DEBUG"/>-->
    <logger name="com.btcalgo.service.marketdata" level="DEBUG"/>

    <root level="info">
        <appender-ref ref="ASYNC_FILE"/>
    </root>
</configuration>
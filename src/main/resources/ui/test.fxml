<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane fx:id="view" fx:controller="com.btcalgo.ui.SinglePageController"
          xmlns:fx="http://javafx.com/fxml" styleClass="root">
    <padding>
        <Insets top="10" right="25" bottom="10" left="25"/>
    </padding>

    <!-- credentials -->
    <GridPane GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" styleClass="block">
        <padding>
            <Insets top="10" right="25" bottom="10" left="25"/>
        </padding>
        <Label text="Key:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="key" minWidth="400" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Secret:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <PasswordField fx:id="secret" minWidth="400" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <Text fx:id="keysStatus"/>
            <Button fx:id="validate" prefWidth="120" text="Validate" onAction="#handleValidateOnClick"/>
        </HBox>
    </GridPane>

    <!-- market data -->
    <GridPane GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" styleClass="block">
        <padding>
            <Insets top="10" right="25" bottom="10" left="25"/>
        </padding>

        <HBox spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
            <ChoiceBox fx:id="pairs"/>
            <Label text="on"/>
            <Label text="BTC-E" style="-fx-font-weight: bold"/>
            <Label text="market"/>
        </HBox>

        <VBox spacing="10" alignment="CENTER" minWidth="100" GridPane.rowIndex="1" GridPane.columnIndex="0">
            <Label text="Best buy:"/>
            <Label fx:id="bestBuy" styleClass="market_price" alignment="CENTER" minWidth="20"/>
        </VBox>

        <VBox spacing="10" alignment="CENTER" minWidth="100" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <Label text="Best sell:"/>
            <Label fx:id="bestSell" styleClass="market_price" alignment="CENTER" minWidth="20"/>
        </VBox>

        <VBox alignment="TOP_LEFT" minWidth="100" GridPane.rowIndex="1" GridPane.columnIndex="2">
            <Label text="Note:"/>
            <Label wrapText="true" textAlignment="JUSTIFY"
                   text="'Best buy' - best price for you to buy at the moment"/>
            <Label wrapText="false" maxWidth="160" textAlignment="JUSTIFY"
                   text="'Best sell' - best price for you to sell at the moment"/>
        </VBox>
    </GridPane>

    <!-- place an order -->
    <GridPane GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"  styleClass="block">
        <padding>
            <Insets top="10" right="25" bottom="10" left="25"/>
        </padding>

        <HBox alignment="CENTER" spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3">
            <Label text="Order Type: "/>
            <ChoiceBox fx:id="strategyTypes"/>
            <Label text="on"/>
            <Label text="BTC-E"/>
        </HBox>

        <VBox spacing="10" minWidth="180" styleClass="block" GridPane.rowIndex="1" GridPane.columnIndex="0">
            <HBox spacing="10">
                <ChoiceBox fx:id="direction"/>
                <Label fx:id="symbol"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Amount: "/>
                <TextField fx:id="amount" prefWidth="80"/>
            </HBox>
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
        </VBox>

        <VBox spacing="10" styleClass="block" GridPane.rowIndex="1" GridPane.columnIndex="1">
            <HBox spacing="10">
                <Label prefWidth="60" text="Spot Price"/>
                <TextField fx:id="stopPrice" prefWidth="80"/>
            </HBox>
            <HBox spacing="10">
                <Label prefWidth="60" text="Price: "/>
                <TextField fx:id="limitPrice" prefWidth="80"/>
            </HBox>
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
        </VBox>

        <HBox spacing="10" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="2">
            <Button fx:id="submit" prefHeight="40" text="Submit" prefWidth="120" onAction="#handleSubmit"/>
        </HBox>
    </GridPane>

    <!-- your orders -->
    <GridPane GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"  styleClass="block">
        <padding>
            <Insets top="10" right="25" bottom="10" left="25"/>
        </padding>
        <TableView fx:id="ordersView" GridPane.columnIndex="0" GridPane.rowIndex="0" minHeight="60">

        </TableView>
    </GridPane>

    <stylesheets>
        <URL value="@btcealgo.css"/>
    </stylesheets>
</GridPane>
            <VBox spacing="10" alignment="BASELINE_LEFT" prefWidth="120" style="-fx-border-color: #818181; -fx-border-radius: 10">
                <Hyperlink text="www.btc-e.com" onAction="#loadBtce"/>
                <Hyperlink text="www.btcalgo.com"/>
                <padding>
                    <Insets bottom="5.0" top="-5.0" />
                </padding>
            </VBox>
        </HBox>-->
  <!-- credentials -->
  <GridPane styleClass="block" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
    <padding>
      <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
    </padding>
    <Label text="Key:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="key" minWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Secret:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <PasswordField fx:id="secret" minWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <HBox alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
      <Text fx:id="keysStatus" />
      <Button fx:id="validate" onAction="#handleValidateOnClick" prefHeight="20.0" prefWidth="120.0" text="Validate" />
    </HBox>
  </GridPane>
  <!-- market data -->
  <GridPane styleClass="block" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
    <padding>
      <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
    </padding>
    <HBox spacing="10.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
      <ChoiceBox fx:id="pairs" />
      <Label text="on" />
      <Label style="-fx-font-weight: bold" text="BTC-E" />
      <Label text="market" />
    </HBox>
    <VBox spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <Label text="Best buy:" />
      <Label fx:id="bestBuy" minWidth="20.0" />
    </VBox>
    <VBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <Label text="Best sell:" />
      <Label fx:id="bestSell" minWidth="20.0" />
    </VBox>
    <Label GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.rowSpan="2" />
  </GridPane>
  <!-- place an order -->
  <GridPane styleClass="block" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
    <padding>
      <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
    </padding>
    <HBox spacing="10.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
      <Label text="Order Type: " />
      <ChoiceBox fx:id="strategyTypes" />
      <Label text="on" />
      <Label text="BTC-E" />
    </HBox>
    <VBox spacing="10.0" styleClass="block" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <HBox spacing="10.0">
        <ChoiceBox fx:id="direction" />
        <Label fx:id="symbol" />
      </HBox>
      <HBox spacing="10.0">
        <Label text="Amount: " />
        <TextField fx:id="amount" />
      </HBox>
      <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" fx:id="x1" />
      </padding>
    </VBox>
    <VBox padding="$x1" spacing="10.0" styleClass="block" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <HBox spacing="10.0">
        <Label prefWidth="60.0" text="Spot Price" />
        <TextField fx:id="stopPrice" />
      </HBox>
      <HBox spacing="10.0">
        <Label prefWidth="60.0" text="Price: " />
        <TextField fx:id="limitPrice" />
      </HBox>
    </VBox>
    <HBox alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
      <Button fx:id="submit" onAction="#handleSubmit" prefWidth="150.0" text="Submit" />
    </HBox>
  </GridPane>
  <!-- your orders -->
  <GridPane styleClass="block" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
    <padding>
      <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
    </padding>
    <TableView fx:id="ordersView" minHeight="60.0" GridPane.columnIndex="0" GridPane.rowIndex="0" />
  </GridPane>
  <padding>
    <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
  </padding>
  <stylesheets>
    <URL value="@btcealgo.css" />
  </stylesheets>
</GridPane>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane fx:id="view"
          fx:controller="com.btcalgo.ui.SinglePageController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER"
          hgap="10"
          vgap="10"
          styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Text id="welcome-text" text="Welcome" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

    <Label text="Key:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="key" minWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Secret:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="secret" minWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Text fx:id="keysStatus"/>
        <Button fx:id="validate" text="Validate keys" onAction="#handleValidateOnClick"/>
    </HBox>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="5">
        <Label text="Market:"/><Label text="BTC-E"/>
    </HBox>

    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Label text="Currency:"/>
        <ChoiceBox fx:id="pairs"/>
    </HBox>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6">
        <Label text="Best buy:"/>
        <TextField fx:id="bestBuy" minWidth="20" editable="false"/>
        <Label text="Best sell:"/>
        <TextField fx:id="bestSell" minWidth="20" editable="false"/>
    </HBox>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="7" alignment="BOTTOM_LEFT">
        <Label text="Strategy:"/>
        <ChoiceBox fx:id="strategyTypes"/>
        <Label text="Buy/Sell:"/>
        <ChoiceBox fx:id="direction"/>
    </HBox>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="8" alignment="BOTTOM_LEFT">
        <Label text="Stop price:"/>
        <TextField fx:id="stopPrice"/>
        <Label text="Order price:"/>
        <TextField fx:id="limitPrice"/>
        <Label text="Amount:"/>
        <TextField fx:id="amount"/>
    </HBox>

    <HBox spacing="10" alignment="BOTTOM_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="9">
        <Button fx:id="submit" text="Submit" onAction="#handleSubmit"/>
    </HBox>

    <TableView fx:id="ordersView" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="10"/>

    <stylesheets>
        <URL value="@btcealgo.css"/>
    </stylesheets>
</GridPane>